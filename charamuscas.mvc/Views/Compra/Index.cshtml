@model List<charamuscas.entities.Entities.compra>
@{
    ViewData["Title"] = "Compras";
}
<div class="container">
    <div class="d-flex flex-row-reverse">
        <form asp-action="Index" asp-controller="Compra" class="flex justify-center items-center gap-4">
            <input type="text"
                   name="search"
                   placeholder="Buscar"
                   class="block border focus:outline focus:outline-amber-700 w-full p-3 rounded text-zinc-500" />
            <button type="submit" class="px-3 py-3 rounded bg-amber-700 hover:bg-amber-600">
                <i class="fas fa-search dark:text-white"></i>
            </button>
        </form>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Codigo</th>
                <th scope="col">Producto</th>
                <th scope="col">Cantidad</th>
                <th scope="col">Costo Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td><a asp-action="Details" asp-controller="Compra" asp-route-id="@item.PK_codigo">@item.PK_codigo</a></td>
                    <td>@item.nombre</td>
                    <td>@(item.cantidad.ToString("N2"))</td>
                    <td>@(item.costo_total.ToString("C2"))</td>
                </tr>
            }
            <tr>
                <td colspan="3"></td>
                <td>@(Model.Sum(x => x.costo_total).ToString("C2"))</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="nav-footer">
    <a asp-action="Create" asp-controller="Compra" class="btn btn-primary"><i class="fas fa-plus"></i> <span class="d-md-inline-block d-none">Nueva Compra</span></a>
</div>