@{
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
    ViewData["Title"] = "Categoria de inventario";
}

<div class="container-fluid">
    <div class="d-flex">
        <span class="text-uppercase fs-3 px-3 py-1">Categoria de inventario</span>
        <span class="fs-3 px-3 py-1 rounded bg-primary text-light"><i class="fas fa-plus"></i></span>
    </div>
    <hr />
</div>

<form id="Form" class="needs-validation" asp-action="Create" asp-controller="Categorias" method="post" novalidate>
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6 col-12 mb-3">
                <label class="fs-5">Nombre *</label>
                <input type="text" id="nombre" name="nombre" class="form-control" required />
                <div class="invalid-feedback">Requerido.</div>
            </div>
        </div>
    </div>
    <div class="nav-footer">
        <a asp-action="Index" asp-controller="Categorias" class="btn btn-outline-secondary"><i class="fas fa-chevron-left"></i> <span class="d-md-inline-block d-none">Todas las Categorias</span></a>
        <a asp-action="Index" asp-controller="Categorias" class="btn btn-outline-danger"><i class="fas fa-times"></i> <span class="d-md-inline-block d-none">Cancelar</span></a>
        <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> <span class="d-md-inline-block d-none">Guardar</span></a>
    </div>
</form>

<script>
    (function () {
        'use strict'

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation')

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>