@model charamuscas.entities.Entities.vw_venta_detalle
@{
    int ventaId = ViewBag.ventaId;
}
<div class="modal-content">
    <div class="modal-header">
        <h3 class="modal-title">Editar Producto</h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <form id="Form" class="needs-validation" novalidate>
        <div class="modal-body">

            <h4>@(Model.categoria) / @(Model.producto)</h4>
            <input asp-for="PK_codigo" type="hidden" />
            <div class="col-12 mb-3">
                <label class="fs-5">Cantidad *</label>
                <input type="number" class="form-control text-end" name="cantidad_vendida" id="cantidad_vendida"
                       value="@(Model.cantidad_vendida.ToString("N2"))" step="0.01" required />
                <span asp-validation-for="cantidad_vendida"></span>
            </div>

            <div class="col-12 mb-3">
                <label class="fs-5">Precio Unitario *</label>
                <input type="number" class="form-control text-end" name="precio_unitario" id="precio_unitario"
                       value="@(Model.precio_unitario.ToString("N2"))" step="0.01" disabled/>
                <span asp-validation-for="precio_unitario"></span>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            <button type="button" class="btn btn-primary" onclick="editarProducto(@(Model.PK_codigo),@(ventaId))">Guardar</button>
        </div>
    </form>
</div>

<script>
    (function () {
        'use strict'

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation')

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>
