@model List<charamuscas.entities.Entities.venta>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Venta";
}

<div class="container">
    <div class="d-flex flex-row-reverse">       
        <form asp-action="Index" asp-controller="Venta" class="d-flex">
            <input type="text"
                   name="search"
                   placeholder="Buscar"
                   class="form-control me-1" />
            <button type="submit" class="btn btn-dark">
                <i class="fas fa-search"></i>
            </button>
        </form>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Codigo</th>
                    <th scope="col">Identificador</th>
                    <th scope="col">Total</th>
                    <th scope="col">Fecha</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            <a asp-action="Details"
                               asp-controller="Venta"
                               asp-route-id="@(item.PK_hash.ToString().ToUpper())">
                                @item.PK_codigo
                            </a>
                        </td>
                        <td>@item.PK_hash.ToString().ToUpper()</td>
                        <td>@(item.total.ToString("C2"))</td>
                        <td>@(item.fecha_hora)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="nav-footer">
    <a asp-action="Create"
       asp-controller="Venta"
       class="btn btn-primary">
        <i class="fas fa-plus"></i>
        <span class="d-md-inline-block d-none">
            Nueva Venta
        </span>
    </a>
</div>

